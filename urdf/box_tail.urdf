<?xml version="1.0"?>
<robot name="box_with_rod">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <!-- Base link -->
  <link name="base_link">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </link>
  
  <!-- Box link -->
  <link name="box">
    <visual>
      <geometry>
        <box size="1.3 0.4 0.4"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <material name="blue">
      </material>
    </visual>
    <collision>
      <geometry>
        <box size="1.3 0.4 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="50.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- Inertia Ixx = 1/12m(y**2+z**2)-->
      <inertia ixx="1.33" ixy="0.0" ixz="0.0" iyy="7.70833" iyz="0.0" izz="7.70833"/>
    </inertial>
  </link>

  <!-- Joint between Box and Base_joint -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="box"/>
    <axis xyz="0.0 0.0 0.0"/>
    <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
  </joint>

  <!-- Rod link -->
  <link name="rod">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.7"/>
      </geometry>
      <origin xyz="0 0.0 0.35" rpy="0.0 0.0 0.0"/>
      <material name="white">
      </material>
    </visual>
    <collision>
      <geometry>
        <cylinder radius="0.05" length="0.7"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="2.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <!-- TODO: -->
      <!-- Inertia in x and y = 1/12(3r**2+l**2) AHHH -->
      <!-- Inertia in z = 1/2mr**2 should be fine-->
      <inertia ixx="0.4975" ixy="0.0" ixz="0.0" iyy="0.4975" iyz="0.0" izz="0.0025"/>
    </inertial>
  </link>

  <!-- Joint between box and rod -->
  <joint name="box_to_rod" type="continuous">
    <parent link="box"/>
    <child link="rod"/>
    <!-- Origin position in x = length_x(box)/2 + radius_cylinder = 0.65 + 0.05 = 0.7 -->
    <origin xyz="-0.7 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <!-- <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/> -->
  </joint>

  <!-- Endeffector -->
  <link name="endeffector">
    <origin>xyz="0.7 0 0.7" rpy="0 0 0"</origin>
  </link>

  <!-- Joint between rod and endeffector -->
  <joint name="rod_to_endeffector" type="fixed">
    <parent link="rod"/>
    <child link="endeffector"/>
    <origin xyz="0 0 0.7" rpy="0 0 0"/>
  </joint>

</robot>