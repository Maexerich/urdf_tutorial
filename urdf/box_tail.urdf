<?xml version="1.0"?>
<robot name="box_with_rod">

  <material name="blue">
    <color rgba="0 0 0.8 1"/>
  </material>

  <material name="white">
    <color rgba="1 1 1 1"/>
  </material>
  
  <!-- Base link -->
  <link name="base_link">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
  </link>
  
  <!-- Box link -->
  <link name="box">
    <visual>
      <geometry>
        <box size="1.3 0.4 0.4"/>
      </geometry>
      <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
      <material name="blue">
      </material>
    </visual>
    <!-- <collision>
      <geometry>
        <box size="1.3 0.4 0.4"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="1.0"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.1" ixy="0.0" ixz="0.0" iyy="0.1" iyz="0.0" izz="0.1"/>
    </inertial> -->
  </link>

  <!-- Joint between Box and Base_joint -->
  <joint name="base_joint" type="fixed">
    <origin xyz="0.0 0.0 0.0" rpy="0.0 0.0 0.0"/>
    <parent link="base_link"/>
    <child link="box"/>
    <axis xyz="0.0 0.0 0.0"/>
    <limit lower="0.0" upper="0.0" effort="0.0" velocity="0.0"/>
  </joint>

  <!-- Rod link -->
  <link name="rod">
    <visual>
      <geometry>
        <cylinder radius="0.05" length="0.7"/>
      </geometry>
      <origin xyz="0 0.0 0.35" rpy="0.0 0.0 0.0"/>
      <material name="white">
      </material>
    </visual>
    <!-- <collision>
      <geometry>
        <cylinder radius="0.1" length="2.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.5"/>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <inertia ixx="0.05" ixy="0.0" ixz="0.0" iyy="0.05" iyz="0.0" izz="0.05"/>
    </inertial> -->
  </link>

  <!-- Joint between box and rod -->
  <joint name="box_to_rod" type="revolute">
    <parent link="box"/>
    <child link="rod"/>
    <origin xyz="-0.7 0 0" rpy="0 0 0"/>
    <axis xyz="1 0 0"/>
    <limit lower="-1.57" upper="1.57" effort="10.0" velocity="1.0"/>    
  </joint>

  <!-- Actuator (if needed) -->
  <transmission type="SimpleTransmission" name="rod_trans">
    <actuator name="rod_motor"/>
    <joint name="box_to_rod"/>
    <mechanicalReduction>1</mechanicalReduction>
  </transmission>

</robot>
